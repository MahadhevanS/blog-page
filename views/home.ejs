<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Blog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>My Blog</h1>

  <a href="/compose"><button>Create New Post</button></a>

  <% if (posts.length === 0) { %>
    <p>No posts yet. Why not <a href="/compose">create one</a>?</p>
  <% } else { %>
    <% posts.forEach(function(post, index) { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>

        <!-- Edit and Delete buttons -->
        <a href="/edit/<%= post.id %>"><button>Edit</button></a>
        <form action="/delete/<%= post.id %>" method="POST" style="display:inline;" onsubmit="return confirmDelete();">
            <button type="submit">Delete</button>
          </form>
          
          
      </div>
    <% }) %>
  <% } %>
  <script>
    function confirmDelete() {
      return confirm('Are you sure you want to delete this post?');
    }
  </script>
  
</body>
</html>
